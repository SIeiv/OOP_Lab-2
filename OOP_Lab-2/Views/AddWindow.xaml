<Window x:Class="OOP_Lab_2.Views.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:OOP_Lab_2.Views"
        xmlns:system="clr-namespace:System;assembly=System.Runtime"
        xmlns:enums="clr-namespace:OOP_Lab_1.Models.Enums"
        mc:Ignorable="d"
        Title="Создать компьютер" Height="600" Width="300">
    <Window.Resources>
        <ObjectDataProvider x:Key="Manufacturers" MethodName="GetValues"
                            ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:Manufacturer"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="RamTypes" MethodName="GetValues"
                            ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:MemoryType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="StorageTypes" MethodName="GetValues"
                            ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:StorageType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    <Grid>
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition ></RowDefinition>
            </Grid.RowDefinitions>
            <Label >Процессор</Label>
            <Grid Grid.Row="1" Margin="15 0 15 0">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="16"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label FontSize="12" Padding="0 0 0 0">Модель</Label>
                    <TextBox Grid.Row="1" FontSize="14"></TextBox>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="16"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label FontSize="12" Padding="0 0 0 0">Частота</Label>
                    <TextBox Grid.Row="1" FontSize="14"></TextBox>
                </Grid>
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="16"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label FontSize="12" Padding="0 0 0 0">Производитель</Label>
                    <ComboBox Grid.Row="1" ItemsSource="{Binding Source={StaticResource Manufacturers}}" SelectedIndex="0"></ComboBox>
                </Grid>
                
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition ></RowDefinition>
            </Grid.RowDefinitions>
            <Label >ОЗУ</Label>
            <Grid Grid.Row="1" Margin="15 0 15 0">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="16"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label FontSize="12" Padding="0 0 0 0">Объем</Label>
                    <TextBox Grid.Row="1" FontSize="14"></TextBox>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="16"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label FontSize="12" Padding="0 0 0 0">Тип</Label>
                    <ComboBox Grid.Row="1" ItemsSource="{Binding Source={StaticResource RamTypes}}" SelectedIndex="0"></ComboBox>
                </Grid>
                
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition ></RowDefinition>
            </Grid.RowDefinitions>
            <Label >Хранилище</Label>
            <Grid Grid.Row="1" Margin="15 0 15 0">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="16"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label FontSize="12" Padding="0 0 0 0">Объем</Label>
                    <TextBox Grid.Row="1" FontSize="14"></TextBox>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="16"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label FontSize="12" Padding="0 0 0 0">Тип</Label>
                    <ComboBox Grid.Row="1" ItemsSource="{Binding Source={StaticResource StorageTypes}}" SelectedIndex="0"></ComboBox>
                </Grid>
                
            </Grid>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition ></RowDefinition>
            </Grid.RowDefinitions>
            <Label >Хранилище</Label>
            <Grid Grid.Row="1" Margin="15 0 15 0">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="16"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label FontSize="12" Padding="0 0 0 0">Цена</Label>
                    <TextBox Grid.Row="1" FontSize="14"></TextBox>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="16"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label FontSize="12" Padding="0 0 0 0">Производитель</Label>
                    <ComboBox Grid.Row="1" ItemsSource="{Binding Source={StaticResource Manufacturers}}" SelectedIndex="0"></ComboBox>
                </Grid>
                <Button Grid.Row="2" Margin="0 5 0  5">Добавить</Button>
            </Grid>
        </Grid>
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="160"></RowDefinition>
            <RowDefinition MinHeight="107"></RowDefinition>
            <RowDefinition MinHeight="107"></RowDefinition>
            <RowDefinition MinHeight="160"></RowDefinition>
        </Grid.RowDefinitions>
    </Grid>
</Window>
